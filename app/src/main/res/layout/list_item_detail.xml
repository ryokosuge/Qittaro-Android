<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/list_item_detail_image_view"
        android:layout_width="@dimen/user_icon_width"
        android:layout_height="@dimen/user_icon_height"
        android:layout_margin="@dimen/large_margin"
    />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/large_margin"
        android:layout_marginBottom="@dimen/large_margin"
        >

        <TextView
            android:id="@+id/list_item_detail_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/large_margin"
            android:layout_marginBottom="@dimen/large_margin"
            android:textSize="@dimen/large_text_size"
            android:textStyle="bold"
            android:textColor="@android:color/primary_text_light"
            />

        <TextView
            android:id="@+id/list_item_detail_sub_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/large_margin"
            android:layout_marginBottom="@dimen/small_margin"
            android:layout_below="@id/list_item_detail_title"
            android:textColor="@android:color/secondary_text_light"
            android:textSize="@dimen/small_text_size"
            />

    </RelativeLayout>

</LinearLayout>