<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/medium_padding"
    >

    <ImageView
        android:id="@+id/spinner_tag_icon_image"
        android:layout_width="@dimen/tag_icon_width"
        android:layout_height="@dimen/tag_icon_height"
        android:layout_margin="@dimen/large_margin"
        android:layout_gravity="center_vertical"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/medium_padding"
        >

        <TextView
            android:id="@+id/spinner_tag_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/small_margin"
            android:textSize="@dimen/medium_text_size"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/spinner_tag_item_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/spinner_tag_name"
            android:textSize="@dimen/small_text_size"
            android:textColor="@android:color/secondary_text_light"
            />

    </RelativeLayout>

</LinearLayout>

