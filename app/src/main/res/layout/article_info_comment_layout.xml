<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/article_info_user_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/large_margin"
        >

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/article_info_comment_user_icon"
            android:layout_width="@dimen/comment_user_icon_width"
            android:layout_height="@dimen/comment_user_icon_height"
            android:layout_marginRight="@dimen/medium_margin"
            />

        <TextView
            android:id="@+id/article_info_comment_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/small_text_size"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/article_info_comment_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/article_info_user_layout"
        android:layout_marginLeft="@dimen/large_margin"
        android:layout_marginRight="@dimen/large_margin"
        android:textSize="@dimen/medium_text_size"
        />

</RelativeLayout>