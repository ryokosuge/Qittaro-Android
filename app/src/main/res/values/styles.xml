<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Holo Color Generator -->
    <style name="EditTextAppTheme" parent="android:Widget.EditText">
        <item name="android:background">@drawable/apptheme_edit_text_holo_light</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="CheckBoxAppTheme" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/apptheme_btn_check_holo_light</item>
    </style>

    <style name="ButtonAppTheme" parent="android:Widget.Button">
        <item name="android:background">@drawable/apptheme_btn_default_holo_light</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:minWidth">64dip</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="ImageButtonAppTheme" parent="android:Widget.ImageButton">
        <item name="android:background">@drawable/apptheme_btn_default_holo_light</item>
    </style>

    <style name="SpinnerAppTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/apptheme_spinner_background_holo_light</item>
        <item name="android:dropDownSelector">@drawable/apptheme_list_selector_holo_light</item>
    </style>

    <style name="SpinnerDropDownItemAppTheme" parent="android:Widget.DropDownItem.Spinner">
        <item name="android:checkMark">@drawable/apptheme_btn_radio_holo_light</item>
    </style>
    <style name="ListViewAppTheme" parent="android:Widget.ListView">
        <item name="android:listSelector">@drawable/apptheme_list_selector_holo_light</item>
    </style>

    <style name="ListViewAppTheme.White" parent="android:Widget.ListView.White">
        <item name="android:listSelector">@drawable/apptheme_list_selector_holo_light</item>
    </style>

    <style name="SpinnerItemAppTheme" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="Theme.Qittaro" parent="@style/Theme.AppCompat.Light">
        <item name="actionBarItemBackground">@drawable/selectable_background_qittaro</item>
        <item name="popupMenuStyle">@style/PopupMenu.Qittaro</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Qittaro</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Qittaro</item>
        <item name="actionBarTabTextStyle">@style/ActionBar.TabText.Qittaro</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Qittaro</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Qittaro</item>
        <item name="actionModeBackground">@drawable/cab_background_top_qittaro</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_qittaro</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Qittaro</item>
    </style>
    <!-- Holo Color Generator -->

    <!-- ActionBarGenerator -->
    <style name="ActionBar.Solid.Qittaro" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="background">@drawable/ab_solid_qittaro</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_qittaro</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_qittaro</item>
        <item name="progressBarStyle">@style/ProgressBar.Qittaro</item>
        <item name="actionBarTabTextStyle">@style/ActionBar.TabText.Qittaro</item>
    </style>

    <style name="ActionBar.TabText.Qittaro" parent="@style/Widget.AppCompat.Light.ActionBar.TabText">
        <item name="android:textColor">@color/action_bar_tab_text</item>
    </style>

    <style name="ActionBar.Transparent.Qittaro" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="background">@drawable/ab_transparent_qittaro</item>
        <item name="progressBarStyle">@style/ProgressBar.Qittaro</item>
    </style>

    <style name="PopupMenu.Qittaro" parent="@style/Widget.AppCompat.Light.PopupMenu">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_qittaro</item>
    </style>

    <style name="DropDownListView.Qittaro" parent="@style/Widget.AppCompat.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_qittaro</item>
    </style>

    <style name="ActionBarTabStyle.Qittaro" parent="@style/Widget.AppCompat.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_qittaro</item>
    </style>

    <style name="DropDownNav.Qittaro" parent="@style/Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_qittaro</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_qittaro</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_qittaro</item>
    </style>

    <style name="ProgressBar.Qittaro" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_qittaro</item>
    </style>

    <style name="ActionButton.CloseMode.Qittaro" parent="@style/Widget.AppCompat.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_qittaro</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Qittaro.Widget" parent="@style/Theme.AppCompat">
        <item name="popupMenuStyle">@style/PopupMenu.Qittaro</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Qittaro</item>
    </style>
    <!-- ActionBarGenerator -->
</resources>
