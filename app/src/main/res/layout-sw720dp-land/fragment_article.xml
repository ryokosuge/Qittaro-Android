<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.google.android.gms.ads.AdView
        android:id="@+id/article_admob_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adUnitId="ca-app-pub-3010029359415397/8656788469"
        ads:adSize="LEADERBOARD"
        />

    <RelativeLayout
        android:id="@+id/article_loading_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/article_admob_view"
        android:visibility="gone"
        >

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/article_detail_progress_bar"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>


    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/article_swipe_refresh"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_above="@id/article_admob_view"
        >

        <ListView
            android:id="@+id/article_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/ListViewAppTheme.White"
            />

    </android.support.v4.widget.SwipeRefreshLayout>


</RelativeLayout>