<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="xyz.ryochin.qittaro" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="xyz.ryochin.qittaro.utils.AppController"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Qittaro" >
        <activity
            android:name="xyz.ryochin.qittaro.activities.HomeActivity"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="xyz.ryochin.qittaro.activities.ArticleDetailActivity"
            android:label="@string/app_name"
            />
        <activity android:name="xyz.ryochin.qittaro.activities.SearchActivity"
            android:label="@string/search_menu_search_text"
            />
        <activity android:name="xyz.ryochin.qittaro.activities.TagActivity"
            android:label="@string/tag_no_logged_in_title"
            />
        <activity android:name="xyz.ryochin.qittaro.activities.FollowingTagActivity"
            android:label="@string/tag_logged_in_title"
            />

        <activity android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"/>

        <meta-data android:name="com.google.android.gms.version" android:value="@integer/google_play_services_version"/>
    </application>

</manifest>
